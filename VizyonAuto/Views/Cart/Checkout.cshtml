@model VizyonAuto.Models.ShippingDetails

@{
    ViewBag.Title = "Checkout";
}

<style>
    .field-validation-error {
        color: #f00;
    }

    .field-validation-valid {
        display: none;
    }

    .input-validation-error {
        border: 1px solid #f00;
        background-color: #fee;
    }

    .validation-summary-errors {
        font-weight: bold;
        color: #f00;
    }

    .validation-summary-valid {
        display: none;
    }
</style>

<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <p>Lütfen sipariş bilgilerinizi doldurunuz.</p>
            <hr />

            @if (User.Identity.IsAuthenticated)
            {
                using (Html.BeginForm("Checkout", "Cart"))
                {
                    @Html.ValidationSummary()

                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label"><strong>Kullanıcı Adı</strong></label>
                        <div class="col-sm-6">
                            <span class="badge-danger">
                                @User.Identity.Name
                            </span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Adres Tanımı</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Adres</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Şehir</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Semt</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Mahalle</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Posta Kodu</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-primary">Siparişi Tamamla</button>
                        </div>
                    </div>
                }
            }
            else
            {
                <script>
                    window.location.href = '/Account/Login';
                </script>
            }

        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
<script src="~/theme/js/scripts.js"></script>
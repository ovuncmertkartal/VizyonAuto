@model IEnumerable<VizyonAuto.Models.AdminOrderModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container pb-5">
    <h2>Siparişler</h2>
    <hr />
    @Html.ActionLink("Kategoriler", "index", "category", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Ürünler", "index", "Product", null, new { @class = "btn btn-primary" })
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sipariş Numarası</th>
                <th>Sipariş Tarihi</th>
                <th>Sipariş Durumu</th>
                <th>Adet</th>
                <th>Toplam Fiyat</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderNumber</td>
                    <td>@item.OrderDate</td>
                    <td>@item.OrderState</td>
                    <td>@item.Count</td>
                    <td>@item.Total.ToString("c")</td>
                    <td>
                        @Html.ActionLink("Detaylar", "Details", new { id = @item.Id }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>